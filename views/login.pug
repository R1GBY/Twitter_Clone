extends layouts/login-layout.pug 

block content 
    .loginContainer 
        h1 Login 

        form(method="post")

            p.errorMessage #{errorMessage}

            input(type="text", name="logUsername", placeholder="Username or email", value=logUsername required="")
            input(type="password", name="logPassword", placeholder="Password" required="")

            //you can "memorize" the login information by changing values
            //input(type="text", name="logUsername", placeholder="Username or email", value='<your id>' required="")
            //input(type="password", name="logPassword", placeholder="Password", value='<your password>' required="")

            input(type="submit", value="Login")
        a(href="/register") Need an account? Register here.